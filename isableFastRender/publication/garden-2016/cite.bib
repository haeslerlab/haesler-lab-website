 author = {Hermann Garden and Diana M. Bowman and Sebastian Haesler and David E. Winickoff},
 doi = {https://doi.org/10.1016/j.neuron.2016.10.053},
 issn = {0896-6273},
 journal = {Neuron},
 number = {3},
 pages = {642-646},
 title = {Neurotechnology and Society: Strengthening Responsible Innovation in Brain Science},
 url = {https://www.sciencedirect.com/science/article/pii/S0896627316308030},
 volume = {92},
 year = {2016}
}

